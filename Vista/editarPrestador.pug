extends ./utilitario/layout

block content
  include ./utilitario/barraDeNav.pug

  div.flex.items-center.justify-center.min-h-screen.bg-gray-100
    div.bg-orange-600.p-8.rounded-xl.shadow-md.w-full.max-w-md
      h1.text-2xl.font-bold.mb-6.text-center Editar Prestador

      if error
        p.text-red-600.font-semibold.mb-4.text-center= error

      form(action=`/prestador/${profesional.ID_Profesional}`, method="POST", class="space-y-4")
        div
          label(for="nombre", class="block font-medium text-gray-700") Nombre:
          input#nombre(type="text", name="Nombre", value=datos && datos.Nombre, class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-orange-400")

        div
          label(for="apellido", class="block font-medium text-gray-700") Apellido:
          input#apellido(type="text", name="Apellido", value=datos && datos.Apellido, class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-orange-400")

        div
          label(for="rol", class="block font-medium text-gray-700") Rol:
          select#rol(name="Rol", class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-orange-400")
            option(value="") Seleccione un rol 
            option(value="medico", selected=datos && datos.Rol=="medico") Médico
            option(value="enfermero", selected=datos && datos.Rol=="enfermero") Enfermero

        div
          label(for="especialidad", class="block font-medium text-gray-700") Especialidad:
          select#especialidad(name="Especialidad", class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-orange-400")
            option(value="sin_especialidad", selected=datos && datos.Especialidad=="sin_especialidad") Sin especialidad
            option(value="cardiologia", selected=datos && datos.Especialidad=="cardiologia") Cardiología
            option(value="pediatria", selected=datos && datos.Especialidad=="pediatria") Pediatría
            option(value="neurologia", selected=datos && datos.Especialidad=="neurologia") Neurología
            option(value="traumatologia", selected=datos && datos.Especialidad=="traumatologia") Traumatología

        div.text-center
          button(type="submit", class="bg-green-600 hover:bg-green-700 text-white font-semibold py-2 px-4 rounded-md shadow-md") Guardar cambios
