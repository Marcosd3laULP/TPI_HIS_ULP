extends ../utilitario/layout

block content
  body.bg-sky-100.min-h-screen
    include ../utilitario/navMedico.pug
    
    div.max-w-4xl.mx-auto.bg-white.mt-10.p-8.rounded-xl.shadow-lg
      h1.text-2xl.font-bold.text-center.text-black-700.mb-6 Altas Hospitalarias Registradas
      input(type="hidden" name="_csrf" value=csrfToken)
      if altas.length === 0
        p.text-center.text-gray-500 No hay altas registradas.
      else
        table.table-auto.w-full.border-collapse.border.border-gray-300
          thead.bg-red-600.text-white
            tr
              th.border.border-gray-300.px-4.py-2 ID Alta
              th.border.border-gray-300.px-4.py-2 Paciente
              th.border.border-gray-300.px-4.py-2 MÃ©dico
              th.border.border-gray-300.px-4.py-2 Fecha Alta
              th.border.border-gray-300.px-4.py-2 Acciones
          tbody
            each alta in altas
              tr(class="hover:bg-gray-100 transition")
                td.border.border-gray-300.px-4.py-2= alta.ID_alta
                td.border.border-gray-300.px-4.py-2= alta.Internacion.Paciente.Nombre + " " + alta.Internacion.Paciente.Apellido
                td.border.border-gray-300.px-4.py-2= alta.Profesional.Nombre + " " + alta.Profesional.Apellido
                td.border.border-gray-300.px-4.py-2= alta.Fecha_alta
                td.border.border-gray-300.px-4.py-2
                  a(
                    href=`/medicos/altaDetalle?idAlta=${alta.ID_alta}`
                    class="bg-blue-600 text-white px-3 py-1 rounded hover:bg-blue-700 transition"
                  ) Detalles
