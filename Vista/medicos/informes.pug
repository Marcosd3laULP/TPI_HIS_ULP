extends ../utilitario/layout

block content
  include ../utilitario/barraDeNav.pug

  .max-w-xl.mx-auto.mt-10.bg-white.shadow-lg.rounded-lg.p-8
    h2.text-2xl.font-bold.mb-6.text-red-600 Formulario de Informe Médico

    form(method="POST", action=`/prestador/medicos/informes/${paciente.ID_paciente}`)
      // Datos del paciente (solo visualización, sin input)
      .mb-4
        label.block.text-gray-700.font-semibold Nombre:
        p.mt-1.text-gray-800= paciente.Nombre

      .mb-4
        label.block.text-gray-700.font-semibold Apellido:
        p.mt-1.text-gray-800= paciente.Apellido

      .mb-4
        label.block.text-gray-700.font-semibold DNI:
        p.mt-1.text-gray-800= paciente.DNI

      // Diagnóstico
      .mb-4
        label.block.text-red-600.font-semibold Diagnóstico:
        input(type="text", name="Diagnostico", required, placeholder="Ej: Faringitis aguda", class="w-full mt-1 p-2 border border-red-300 rounded focus:outline-none focus:ring-2 focus:ring-red-500")

      // Observaciones
      .mb-4
        label.block.text-red-600.font-semibold Observaciones:
        textarea(name="Descripcion", rows="5", placeholder="Observaciones adicionales...", class="w-full mt-1 p-2 border border-red-300 rounded focus:outline-none focus:ring-2 focus:ring-red-500")

      // Botón
      .flex.justify-end
        button(type="submit", class="bg-red-600 hover:bg-red-700 text-white font-bold py-2 px-4 rounded shadow")
          | Guardar Informe
