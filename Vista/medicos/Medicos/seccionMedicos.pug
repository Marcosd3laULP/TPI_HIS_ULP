extends  ../utilitario/layout

block content
  head
    title Sección Médicos

  body.bg-sky-100.min-h-screen
    include ../utilitario/barraDeNav.pug

    h1.text-3xl.font-bold.text-center.text-gray-800.mt-8.mb-6 Opciones de Médico

    div.flex.justify-center.gap-6.flex-wrap.px-4
      a(href="medicos/pacientes" class="bg-white rounded-2xl shadow-md py-10 px-6 w-80 flex flex-col items-center transition hover:shadow-xl")
        img(src="/images/pacientes.svg" alt="Pacientes" class="w-20 h-20 mb-4")
        p.text-center.text-gray-800.font-semibold.text-lg Pacientes

      a(href="/medicos/internados" class="bg-white rounded-2xl shadow-md py-10 px-6 w-80 flex flex-col items-center transition hover:shadow-xl")
        img(src="/images/internados.svg" alt="Internados" class="w-20 h-20 mb-4")
        p.text-center.text-gray-800.font-semibold.text-lg Internados

    //- Estilos adicionales para mantener consistencia
    style.
      .transition {
        transition: all 0.3s ease;
      }
      .hover\:shadow-xl:hover {
        box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
      }