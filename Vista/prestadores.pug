extends ./utilitario/layout

block content
  head
    title Sección Prestadores

  body.bg-sky-100.min-h-screen
    include ./utilitario/barraDeNav.pug

    h1.text-3xl.font-bold.text-center.text-gray-800.mt-8.mb-6 Opciones de Personal

    div.flex.justify-center.gap-6.flex-wrap.px-4
      a(href="/prestador/medicos" class="bg-white rounded-2xl shadow-md py-10 px-6 w-80 flex flex-col items-center transition hover:shadow-xl")
        img(src="/images/med.svg" alt="Médicos" class="w-20 h-20 mb-4")
        p.text-center.text-gray-800.font-semibold.text-lg Médicos

      a(href="/enfermeria/seccionEnf" class="bg-white rounded-2xl shadow-md py-10 px-6 w-80 flex flex-col items-center transition hover:shadow-xl")
        img(src="/images/enf.svg" alt="Enfermeros" class="w-20 h-20 mb-4")
        p.text-center.text-gray-800.font-semibold.text-lg Enfermeros

      a(href="/prestador/listaPrestador" class="bg-white rounded-2xl shadow-md py-10 px-6 w-80 flex flex-col items-center transition hover:shadow-xl")
        img(src="/images/listaPro.svg" alt="Listar personal" class="w-20 h-20 mb-4")
        p.text-center.text-gray-800.font-semibold.text-lg Listar Personal
