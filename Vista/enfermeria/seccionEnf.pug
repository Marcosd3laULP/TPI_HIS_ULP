extends ../utilitario/layout

block content
  body.bg-sky-100.min-h-screen
    include ../utilitario/navEnfermero.pug

    h1.text-3xl.font-bold.text-center.text-gray-800.mt-8.mb-6 Sección Enfermería

    // Contenedor horizontal de opciones
    div.flex.justify-center.flex-wrap.gap-6.px-4
      // Primera opción
      a(href="/enfermeria/internados" class="bg-white rounded-2xl shadow-md py-10 px-6 w-64 flex flex-col items-center transition hover:shadow-xl")
        img(src="/images/buscarEnf" alt="Evaluar pacientes" class="w-20 h-20 mb-4")
        p.text-center.text-gray-800.font-semibold.text-lg Evaluar pacientes

      // Segunda opción
      a(href="/enfermeria/InternosCuidados" class="bg-white rounded-2xl shadow-md py-10 px-6 w-64 flex flex-col items-center transition hover:shadow-xl")
        img(src="/images/gestEnf" alt="Gestionar internados" class="w-20 h-20 mb-4")
        p.text-center.text-gray-800.font-semibold.text-lg Gestionar internados
