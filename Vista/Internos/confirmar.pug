extends ../utilitario/layout

block content
  body.bg-sky-100.min-h-screen
    include ../utilitario/navRecepcion.pug


    h1.text-2xl.font-bold.text-center.my-6 Confirmar datos del paciente

    //- Contenedor central del formulario
    div.flex.justify-center
      form(method="POST", action="/pacientes/internaciones/confirmar/guardar" 
        class="bg-white p-6 rounded-lg shadow-md flex flex-col gap-4 w-full max-w-md")
        input(type="hidden", name="_csrf", value=csrfToken)
        input(type="hidden", name="idPacienteEmergencia", value=idPacienteEmergencia)
        input(type="hidden", name="idPacienteNormal", value=idPacienteNormal)

        label(for="nombre" class="font-semibold") Nombre:
        input(type="text" name="nombre" value=pacienteNormal.Nombre required class="border px-2 py-1 rounded w-full")

        label(for="apellido" class="font-semibold") Apellido:
        input(type="text" name="apellido" value=pacienteNormal.Apellido required class="border px-2 py-1 rounded w-full")

        label(for="dni" class="font-semibold") DNI:
        input(type="text" name="dni" value=pacienteNormal.DNI required class="border px-2 py-1 rounded w-full")

        label(for="sexo" class="font-semibold") Sexo:
        select(name="sexo" required class="border px-2 py-1 rounded w-full")
          option(value="femenino" selected=(pacienteNormal.Sexo === 'femenino')) Femenino
          option(value="masculino" selected=(pacienteNormal.Sexo === 'masculino')) Masculino

        label(for="domicilio" class="font-semibold") Domicilio:
        input(type="text" name="domicilio" value=pacienteNormal.Domicilio class="border px-2 py-1 rounded w-full")

        label(for="telefono" class="font-semibold") Tel√©fono:
        input(type="text" name="telefono" value=pacienteNormal.Telefono class="border px-2 py-1 rounded w-full")

        button(type="submit" 
          class="bg-green-600 text-white px-4 py-2 rounded hover:bg-green-700 transition mt-2") Confirmar
