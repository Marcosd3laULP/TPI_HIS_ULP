extends ../utilitario/layout

block content
  body.bg-sky-100.min-h-screen
    include ../utilitario/navRecepcion.pug

    h1.text-2xl.font-bold.text-center.my-6 Registro de paciente anónimo

    //- Contenedor central del formulario
    div.flex.justify-center
      form(method="POST", action="/pacientes/internaciones/anonimo/guardar" 
        class="bg-white p-6 rounded-lg shadow-md flex flex-col gap-4 w-full max-w-md")
        input(type="hidden", name="_csrf", value=csrfToken)
        input(type="hidden", name="idPacienteEmergencia", value=idPacienteEmergencia)

        label(for="nombre" class="font-semibold") Nombre:
        input(type="text" name="nombre" required class="border px-2 py-1 rounded w-full")

        label(for="apellido" class="font-semibold") Apellido:
        input(type="text" name="apellido" required class="border px-2 py-1 rounded w-full")

        label(for="dni" class="font-semibold") DNI:
        input(type="text" name="dni" required class="border px-2 py-1 rounded w-full")

        label(for="sexo" class="font-semibold") Sexo:
        select(name="sexo" required class="border px-2 py-1 rounded w-full")
          option(value="femenino") Femenino
          option(value="masculino") Masculino

        label(for="domicilio" class="font-semibold") Domicilio:
        input(type="text" name="domicilio" class="border px-2 py-1 rounded w-full")

        label(for="telefono" class="font-semibold") Teléfono:
        input(type="text" name="telefono" class="border px-2 py-1 rounded w-full")

        button(type="submit" 
          class="bg-green-600 text-white px-4 py-2 rounded hover:bg-green-700 transition mt-2") Guardar
