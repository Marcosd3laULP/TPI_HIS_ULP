extends ../utilitario/Layout

block content
  head
    title Sección Pacientes

  body.bg-sky-100.min-h-screen
    include ../utilitario/navRecepcion.pug

    //- Botón Volver
    div.px-8.mt-6.mb-4
      a(href="/pacientes" class="inline-block bg-red-500 text-white font-bold px-4 py-2 rounded hover:bg-red-600 transition") Volver

    h1.text-3xl.font-bold.text-center.text-gray-800.mt-8.mb-6 Sección de Internaciones

    div.flex.justify-center.gap-6.flex-wrap.px-4
      a(href="/pacientes/internaciones/internarPaciente" class="bg-white rounded-2xl shadow-md py-10 px-6 w-80 flex flex-col items-center transition hover:shadow-xl")
        img(src="/images/admitir.svg" alt="Admitir paciente" class="w-20 h-20 mb-4")
        p.text-center.text-gray-800.font-semibold.text-lg Realizar internacion

      a(href="/pacientes/internaciones/lista-internados" class="bg-white rounded-2xl shadow-md py-10 px-6 w-80 flex flex-col items-center transition hover:shadow-xl")
        img(src="/images/turnos.svg" alt="Gestionar turnos" class="w-20 h-20 mb-4")
        p.text-center.text-gray-800.font-semibold.text-lg Gestionar internaciones

      a(href="/pacientes/internaciones/emergencia" class="bg-white rounded-2xl shadow-md py-10 px-6 w-80 flex flex-col items-center transition hover:shadow-xl")
        img(src="/images/emergencia.png" alt="Gestionar internaciones" class="w-20 h-20 mb-4")
        p.text-center.text-gray-800.font-semibold.text-lg Emergencias 